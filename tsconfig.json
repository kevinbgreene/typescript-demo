{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "pretty": true,
        "removeComments": true,
        "rootDir": "./src",
        "outDir": "./build",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules"
    ]
}